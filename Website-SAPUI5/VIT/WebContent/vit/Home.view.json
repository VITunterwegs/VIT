{
	"Type":"sap.ui.core.mvc.JSONView",
	"controllerName":"vit.Home",
	"content":[
		{
			"Type":"sap.m.Page",
			"showHeader":true,
			"showNavButton":"{device>/isPhone}",
			"navButtonPress":"showMenu",
			"backgroundDesign":"Transparent",
			"content":[
				{
					"Type":"sap.ui.layout.Splitter",
					"orientation":"Vertical",
					"height":"100%",
					"contentAreas":[
						{
							"Type":"sap.m.FlexBox",
							"height":"100%",
							"alignItems":"Center",
							"justifyContent":"Center",
							"direction":"Column",
							"layoutData":{
								"Type":"sap.ui.layout.SplitterLayoutData",
								"size":"50%",
								"resizable":false
							},
							"items":[
								{
									"Type":"sap.m.Button",
									"text":"Suchen",
									"icon":"sap-icon://search",
									"iconFirst":true,
									"width":"180px",
									"press":"handleSearchPress"
								},
								{
									"Type":"sap.m.Button",
									"text":"Melden",
									"icon":"sap-icon://action",
									"iconFirst":true,
									"width":"180px",
									"press":"handleNotifyPress"
								}
								
							]
							
						},
						{
							"Type":"sap.m.Table",
							"layoutData":{
								"Type":"sap.ui.layout.SplitterLayoutData",
								"size":"auto",
								"resizable":false
							},
							"columns":[
								{
									"Type":"sap.m.Column",
									"header":{
										"Type":"sap.m.Label",
										"text":"Linie"
									}
									
								},
								{
									"Type":"sap.m.Column",
									"header":{
										"Type":"sap.m.Label",
										"text":"Richtung"
									}
									
								},
								{
									"Type":"sap.m.Column",
									"header":{
										"Type":"sap.m.Label",
										"text":"Versp√§tung"
									}
									
								},
								{
									"Type":"sap.m.Column",
									"header":{
										"Type":"sap.m.Label",
										"text":"Ankunft"
									}
									
								}
								
							]
							
						}
						
					]
					
				}
				
			]
			
		}
		
	]
	
}