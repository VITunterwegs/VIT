{
    "Type":"sap.ui.core.mvc.JSONView",
    "controllerName":"vit.Home",
    "content":[
        {
            "Type":"sap.m.Page",
            "showHeader":true,
            "showNavButton":false,
            "backgroundDesign":"List",
            "enableScrolling":false,
            "customHeader":[
                {
                    "Type":"sap.m.Bar",
                    "contentLeft":[
                        {
                            "Type":"sap.m.Button",
                            "icon":"sap-icon://menu2",
                            "press":"showMenu"
                        }
                    ],
                    "contentMiddle":[
                        {
                            "Type":"sap.m.Label",
                            "text":"Home"
                        }
                    ]
                }
            ],
            "content":[
                {
                    "Type":"sap.m.FlexBox",
                    "id":"flexbox",
                    "height":"43%",
                    "alignItems":"Center",
                    "justifyContent":"Center",
                    "direction":"Column",
                    "items":[
                        {
                            "Type":"sap.m.Button",
                            "text":"Suchen",
                            "icon":"sap-icon://search",
                            "iconFirst":true,
                            "width":"180px",
                            "press":"handleSearchPress"
                        },
                        {
                            "Type":"sap.m.Button",
                            "text":"Melden",
                            "icon":"sap-icon://action",
                            "iconFirst":true,
                            "width":"180px",
                            "press":"handleNotifyPress"
                        }
                    ]
                },
                {
                    "Type":"sap.m.ScrollContainer",
                    "vertical":true,
                    "height":"57%",
                    "content":[
                        {
                            "Type":"sap.m.Table",
                            "fixedLayout":false,
                            "id":"dashboard",
                            "columns":[
                                {
                                    "Type":"sap.m.Column",
                                    "header":{
                                        "Type":"sap.m.Label",
                                        "text":"Linie"
                                    }
                                },
                                {
                                    "Type":"sap.m.Column",
                                    "header":{
                                        "Type":"sap.m.Label",
                                        "text":"Richtung"
                                    }
                                },
                                {
                                    "Type":"sap.m.Column",
                                    "header":{
                                        "Type":"sap.m.Label",
                                        "text":"Versp√§tung"
                                    }
                                },
                                {
                                    "Type":"sap.m.Column",
                                    "header":{
                                        "Type":"sap.m.Label",
                                        "text":"Ankunft"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}