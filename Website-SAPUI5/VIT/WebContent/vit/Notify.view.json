{
    "Type":"sap.ui.core.mvc.JSONView",
    "controllerName":"vit.Notify",
    "content":[
        {
            "Type":"sap.m.Page",
            "showHeader":true,
            "id":"pNotify",
            "customHeader":[
                {
                    "Type":"sap.m.Bar",
                    "contentLeft":[
                        {
                            "Type":"sap.m.Button",
                            "icon":"sap-icon://menu2",
                            "press":"showMenu"
                        }
                    ],
                    "contentMiddle":[
                        {
                            "Type":"sap.m.Label",
                            "text":"Melden"
                        }
                    ],
                    "contentRight":[
                        {
                            "Type":"sap.m.Button",
                            "icon":"sap-icon://home",
                            "press":"goToHome"
                        }
                    ]
                }
            ],
            "content":[
                {
                    "Type":"sap.ui.layout.form.Form",
                    "layout":{
                        "Type":"sap.ui.layout.form.ResponsiveGridLayout",
                        "id":"L1"
                    },
                    "formContainers":[
                        {
                            "Type":" sap.ui.layout.form.FormContainer",
                            "formElements":[
                                {
                                    "Type":"sap.ui.layout.form.FormElement",
                                    "label":"Stadt",
                                    "fields":[
                                        {
                                            "Type":"sap.m.Input",
                                            "liveChange":"locationChanged",
                                            "id":"inputLocation",
                                            "type":"Text",
                                            "placeholder":"Standort eingeben",
                                            "showValueHelp":true,
                                            "valueHelpRequest":"valueHelpPressed",
                                            "editable":true
                                        }
                                    ]
                                },
                                {
                                    "Type":"sap.ui.layout.form.FormElement",
                                    "label":"Verkehrsmittel",
                                    "fields":[
                                        {
                                            "Type":"sap.m.Select",
                                            "id":"SelectTransportation",
                                            "type":"Default",
                                            "enabled":false
                                        }
                                    ]
                                },
                                {
                                    "Type":"sap.ui.layout.form.FormElement",
                                    "label":"Haltestelle",
                                    "fields":[
                                        {
                                            "Type":"sap.m.Select",
                                            "change":"handleStopChoose",
                                            "id":"SelectStop",
                                            "enabled":false,
                                            "type":"Default"
                                        }
                                    ]
                                },
                                {
                                    "Type":"sap.ui.layout.form.FormElement",
                                    "label":"Line > Richtung",
                                    "fields":[
                                        {
                                            "Type":"sap.m.Select",
                                            "type":"Default",
                                            "id":"SelectDirection",
                                            "enabled":false
                                         
                                        }
                                    ]
                                },
                                {
                                    "Type":"sap.ui.layout.form.FormElement",
                                    "fields":[
                                        {
                                            "Type":"sap.m.CheckBox",
                                            "id":"canceled",
                                            "text":"Ausfall",
                                            "selected":false,
                                            "select":"cancelChanged"
                                        }
                                    ]
                                },
                                {
                                    "Type":"sap.ui.layout.form.FormElement",
                                    "id":"formDelay",
                                    "label":"Versp√§tung",
                                    "fields":[
                                        {
                                            "Type":"sap.m.DateTimeInput",
                                            "id":"SelectDelay",
                                            "displayFormat":"HH:mm",
                                            "enabled":false,
                                            "type":"Time",
                                            "value":"00:00",
                                            "change":"delayChanged"
                                        }
                                    ]
                                },
                                
                                {
                                    "Type":"sap.ui.layout.form.FormElement",
                                    "fields":[
                                        {
                                            "Type":"sap.m.Button",
                                            "id":"ButtonReport",
                                            "text":"Melden",
                                            "press":"handleSendNotificationPress",
                                            "type":"Accept",
                                            "enabled":false
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}